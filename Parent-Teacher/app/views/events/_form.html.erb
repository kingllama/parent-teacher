<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section class='text-center'>
    <div class='new-appointment-form borders shadow top-left-border'>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :start_time %><br>
        <%= f.datetime_select :start_time, :class => 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :end_time %><br>
        <%= f.datetime_select :end_time, :class => 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :student_id %><br>
        <%= f.select(:student_id, options_for_select(@student_list)) %>
      </div>
      <div class='action'>
        <%= f.submit 'Create Appointment', :class => 'btn btn-warning text-center appointment-create' %>
      </div>
    </div>
  </section>
<% end %>
